<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/srl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前设备名称："
            />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:text="47.90.92.56"
                android:id="@+id/et_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:hint="输入IP地址"
                />
            <EditText
                android:text="16840"
                android:id="@+id/et_port"
                android:inputType="number"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="输入端口"
                />
            <com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper
                app:shadowOffsetX="15"
                app:shadowOffsetY="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:elevation="10dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/btn_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onReadFileClick"
                android:text="读取文件"
                />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空文件"
                android:onClick="onDeleteClick"
                />
            <Button
                android:id="@+id/btn_conn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onConnClick"
                android:text="连接"
                />
            <Button
                android:id="@+id/btn_disconn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onDisConnClick"
                android:text="断开"
                />
        </LinearLayout>

        <EditText
            android:focusable="false"
            android:id="@+id/et_input_device_name"
            android:hint="输入设置设备名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_save_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存设备名"
            android:onClick="onSaveDevice"
            />
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_device_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        
        
        <TextView
            android:visibility="gone"
            android:text="XXXXXXX"
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="gone"
            android:text="XXXXXXX"
            android:id="@+id/tv_state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="gone"
            android:text="XXXXXXX"
            android:id="@+id/tv_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:visibility="gone"
            android:text="XXXXXXX"
            android:id="@+id/tv_state3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="XXXXXXX"
            android:id="@+id/tv_state_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_send_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发送消息"
                />
            <Button
                android:id="@+id/btn_device_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设备状态"
                />
            <Button
                android:id="@+id/btn_register_device"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册设备"
                />
            <Button
                android:id="@+id/btn_register_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册手机"
                />
            <Button
                android:id="@+id/btn_device_is_exist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设备存在"
                />
            <Button
                android:id="@+id/btn_bind_device"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设备绑定"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_unbind_device"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 解绑设备"
                />
            <Button
                android:id="@+id/btn_bind_device_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="绑定设备列表"
                />
            <Button
                android:id="@+id/btn_is_bind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否绑定"
                />
            <Button
                android:id="@+id/btn_id_query_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查询手机"
                />
            <Button
                android:id="@+id/btn_share_device"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="分享设备"
                />
            <Button
                android:id="@+id/btn_cancel_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消分享"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_query_share_device_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查询当前登录用户有没有被分享的设备"
                />
            <Button
                android:id="@+id/btn_query_share_device_phone_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="主控手机通过设备名查询该设备分享手机列表"
                />
        </LinearLayout>
        <ScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                />
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
